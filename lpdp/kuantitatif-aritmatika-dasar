<script>
  const synth = window.speechSynthesis;
  let elements = [];
  let index = 0;
  let utterance = null;
  let isPaused = false;

  function clearHighlight() {
    elements.forEach(el => el.classList.remove("reading"));
  }

  function readNext() {
    if (index >= elements.length) {
      stopReading();
      return;
    }

    clearHighlight();
    const el = elements[index];
    el.classList.add("reading");

    utterance = new SpeechSynthesisUtterance(el.innerText);
    utterance.lang = "id-ID";

    utterance.onend = () => {
      index++;
      readNext();
    };

    synth.speak(utterance);
  }

  function startReading() {
    stopReading();

    // üîï Skip elemen petunjuk
    elements = Array.from(
      document.querySelectorAll(".readable:not([data-skip='true'])")
    );

    index = 0;
    readNext();
  }

  function togglePause() {
    if (!synth.speaking) return;

    if (isPaused) {
      synth.resume();
      isPaused = false;
    } else {
      synth.pause();
      isPaused = true;
    }
  }

  function stopReading() {
    synth.cancel();
    clearHighlight();
    index = 0;
    isPaused = false;
  }
</script>

